{
    "python.pythonPath": "${workspaceRoot}/venv/bin/python",
    "python.linting.flake8Path": "${workspaceRoot}/venv/bin/flake8",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__/": true
    }
}